{
    "$schema": "./schema.json",

    "server": {
        "host": "0.0.0.0",
        "port": 3000,
        "socketPort": 3001
    },

    "logging": {
        "enabled": true,
        "format": "plain",
        "level": "info",
        "timestamp": "DD.MM.YYYY HH:mm:ss.SSS",
        "http": {
            "format": "short",
