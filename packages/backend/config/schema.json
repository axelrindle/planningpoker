{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "planningpoker configuration",
    "properties": {
        "data_directory": {
            "type": "string",
            "description": "Specifies where application data is stored.",
            "default": "./data"
        },

        "server": {
            "type": "object",
            "description": "Server configuration",
            "properties": {
                "host": {
                    "type": "string",
                    "default": "0.0.0.0"
                },
                "port": {
                    "type": "number",
                    "default": 3000
                }
            }
        },

        "logging": {
            "type": "object",
            "description": "Logging configuration",
            "properties": {
                "level": {
                    "type": "string",
                    "$comment": "https://github.com/winstonjs/winston#logging-levels",
                    "default": "info",
                    "enum": [
                        "error",
                        "warn",
                        "info",
                        "debug"
                    ]
                },
                "timestamp": {
                    "type": "string",
                    "default": "DD.MM.YYYY HH:mm:ss.SSS"
                },
                "http": {
                    "type": "object",
                    "description": "Logging of Http requests",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true
                        },
                        "format": {
                            "type": "string",
                            "default": "short"
                        }
                    }
                }
            }
        }
    }
}
